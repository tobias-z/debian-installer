window {
    location:   center;
    width:      600;
    y-offset:   -160;

    background-color:   @bg0;
}

inputbar {
    spacing:    8px;
    padding:    8px;

    background-color:   @bg1;
}

prompt, entry, element-icon, element-text {
    text-color: #ffffff;
    vertical-align: 0.5;
}

prompt {
    text-color: #ffffff;
}

textbox {
    padding:            8px;
    background-color:   @bg1;
}

listview {
    padding:    0px 0;
    lines:      10;
    columns:    1;

    fixed-height:   false;
}

element {
    padding:    8px;
    spacing:    8px;
}

element normal normal {
    text-color: @fg0;
}

element normal urgent {
    text-color: @urgent-color;
}

element normal active {
    text-color: @accent-color;
}

element selected {
    text-color: #ffffff;
}

element selected normal, element selected active {
    background-color:   @accent-color;
}

element selected urgent {
    background-color:   @urgent-color;
}

element-icon {
    size:   0.7em;
}

element-text {
    text-color: inherit;
}
