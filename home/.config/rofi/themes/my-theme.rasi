* {
    font:   "JetBrains Mono Medium Nerd Font Complete Mono 12";

    bg0:     #212121;
    bg1:     #212121;
    fg0:     #888888;

    accent-color:     #536886;
    urgent-color:     #EBCB8B;

    background-color:   transparent;
    text-color:         @fg0;

    margin:     1;
    padding:    0;
    spacing:    1;
}

